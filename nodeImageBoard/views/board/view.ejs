<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
<link rel="stylesheet" href="/stylesheets/board.css">
<script src="/js/jquery-2.1.3.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery-latest.min.js"></script>

<title>이미지 게시판</title>
</head>
<body>
<header>
	<% include ../layout/header.ejs %>
</header>
<!-- container -->
  <div class="container">
		<!-- body -->
        <div class="body">
          <!-- form -->
          <form action="/board/view" method="post">
          	<input type="hidden" id="seq" name ="seq" value="<%=boardView.seq%>">
          	<!-- <input type="hidden" id="boardcd" name ="boardcd" value="<%=boardView.boardcd%>"> -->
			 <div id="boardModForm">
		            <table class="table table-striped">
						<thead>
							<tr>
								<th colspan="2" style="text-align: center;"> 게시글 </th>
							</tr>  
					 	</thead>
					 
					 	<tbody>
					    	<tr>
					    		<th> 제목 </th>
					  			<td>
					  				<input type="text" class="form-control" id="title" name="title" readonly="readonly"  value="<%= boardView.title %>">
					  			</td>
					  		</tr>
							<tr>
								<th> 작성자 </th>
					  			<td>
					  				<input type="text" class="form-control" id="userid" name="userid" readonly="readonly" value="<%= boardView.userid %>">
					  			</td>
					  		</tr>
							<tr>
								<th> 이미지</th>
								<td>
									<div class="img_wrap" id="img_wrap">
										<% getImageViewList.forEach(function (imageview,index){ %>
											<img class="card-img-top" src="<%= imageview.vfiledir %>">
										<%})%>
									</div>
								</td>
					
							</tr>
					  		<tr>
					  			<th> 내용 </th>
					  			<td>
					  				<textarea class="form-control" name="contents" maxlength="2048" style="height:350px" readonly="readonly"><%=boardView.contents%></textarea>
					  			</td>
					  		</tr>
					 	</tbody>
					 </table>
		           
	            	<div>
	            		<a href="/board/list/1" class="btn btn-sm btn-outline-secondary" id="list">목록</a>
	            		<%if(session.sid == boardView.userid ) {%>
	            			<a class="btn btn-sm btn-outline-primary" id="view" href="/board/modview/<%= boardView.seq %>/<%= boardView.userid %>">수정</a>
	            		<%}%>
		            </div>
	        </div>
          </form>
        </div>
      </div>
    <footer>
    	<% include ../layout/footer.ejs %>
    </footer>
</body>


</html>